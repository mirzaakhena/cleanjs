{
  "openapi": "3.0.0",
  "info": {
    "title": "App",
    "version": "1.0.0"
  },
  "servers": [
    {
      "description": "local",
      "url": "http://localhost:3000"
    },
    {
      "description": "production",
      "url": "https://production.com"
    }
  ],
  "tags": [
    {
      "name": "user",
      "description": "data master user"
    },
    {
      "name": "struk",
      "description": "struk yang di upload user"
    },
    {
      "name": "reward",
      "description": "data master reward"
    },
    {
      "name": "user_reward",
      "description": "reward yang di redeem oleh user"
    }
  ],
  "paths": {
    "/api/v1/user": {
      "get": {
        "tags": ["user"],
        "summary": "userGetAll",
        "description": "userGetAll",
        "operationId": "userGetAll",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number for pagination",
            "default": 1,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "size",
            "in": "query",
            "description": "Number of items per page",
            "default": 20,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {}
      },
      "post": {
        "tags": ["user"],
        "summary": "userCreate",
        "description": "userCreate",
        "operationId": "userCreate",
        "parameters": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "default": "mirza",
                    "description": "name of the user"
                  }
                }
              }
            }
          }
        },
        "responses": {}
      }
    },
    "/api/v1/reward": {
      "get": {
        "tags": ["reward"],
        "summary": "rewardGetAll",
        "description": "rewardGetAll",
        "operationId": "rewardGetAll",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number for pagination",
            "default": 1,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "size",
            "in": "query",
            "description": "Number of items per page",
            "default": 20,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {}
      },
      "post": {
        "tags": ["reward"],
        "summary": "rewardCreate",
        "description": "rewardCreate",
        "operationId": "rewardCreate",
        "parameters": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "default": "TITLE_REWARD",
                    "description": "Title for reward"
                  },
                  "description": {
                    "type": "string",
                    "default": "DESC_REWARD",
                    "description": "Description for reward"
                  },
                  "point": {
                    "type": "integer",
                    "default": "10",
                    "description": "the number of point for a reward"
                  },
                  "stock": {
                    "type": "integer",
                    "default": "100",
                    "description": "reward quantity"
                  },
                  "image": {
                    "type": "object",
                    "default": {
                      "id": "IMAGE_ID",
                      "name": "IMAGE_NAME",
                      "url": "IMAGE_URL"
                    },
                    "description": "image thumbnail information"
                  }
                }
              }
            }
          }
        },
        "responses": {}
      }
    },
    "/api/v1/reward/{rewardID}/redeem": {
      "post": {
        "tags": ["reward"],
        "summary": "rewardRedeem",
        "description": "rewardRedeem",
        "operationId": "rewardRedeem",
        "parameters": [
          {
            "name": "rewardID",
            "in": "path",
            "description": "id of reward",
            "type": "string",
            "required": true
          },
          {
            "name": "userID",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {}
      }
    },
    "/api/v1/struk": {
      "get": {
        "tags": ["struk"],
        "summary": "strukGetAll",
        "description": "strukGetAll",
        "operationId": "strukGetAll",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "default": 1,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "size",
            "in": "query",
            "default": 20,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {}
      },
      "post": {
        "tags": ["struk"],
        "summary": "strukUpload",
        "description": "strukUpload",
        "operationId": "strukUpload",
        "parameters": [
          {
            "name": "userID",
            "in": "header",
            "type": "string"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "billNumber": {
                    "type": "string",
                    "default": "BILL-123-456"
                  },
                  "totalTransaksi": {
                    "type": "integer",
                    "default": 50000
                  },
                  "screenshot": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "default": "IMAGE_ID"
                      },
                      "name": {
                        "type": "string",
                        "default": "IMAGE_NAME"
                      },
                      "url": {
                        "type": "string",
                        "default": "IMAGE_URL"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {}
      }
    },
    "/api/v1/struk/{strukID}/approval": {
      "post": {
        "tags": ["struk"],
        "summary": "strukApproval",
        "description": "strukApproval",
        "operationId": "strukApproval",
        "parameters": [
          {
            "name": "strukID",
            "in": "path",
            "description": "id of struk",
            "type": "string",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "approvalStatus": {
                    "type": "string",
                    "default": "APPROVE"
                  }
                }
              }
            }
          }
        },
        "responses": {}
      }
    },
    "/api/v1/userreward": {
      "get": {
        "tags": ["user_reward"],
        "summary": "userRewardGetAll",
        "description": "userRewardGetAll",
        "operationId": "userRewardGetAll",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "default": 1,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "size",
            "in": "query",
            "default": 20,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {}
      }
    },
    "/api/v1/userreward/{userRewardID}/approval": {
      "post": {
        "tags": ["user_reward"],
        "summary": "userRewardApproval",
        "description": "userRewardApproval",
        "operationId": "userRewardApproval",
        "parameters": [
          {
            "name": "userRewardID",
            "in": "path",
            "description": "id of userReward",
            "type": "string",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "default": "APPROVE"
                  }
                }
              }
            }
          }
        },
        "responses": {}
      }
    }
  },
  "components": {}
}
